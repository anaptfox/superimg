{
  "name": "@superimg/cli",
  "version": "0.1.0",
  "description": "CLI for SuperImg - dev server and headless rendering",
  "type": "module",
  "bin": {
    "superimg": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/cli.ts --format esm --outDir dist --dts",
    "dev": "tsup src/cli.ts --format esm --outDir dist --watch",
    "test": "vitest --run --config vitest.config.ts",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "superimg",
    "cli",
    "video",
    "rendering"
  ],
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@superimg/core": "workspace:*",
    "@superimg/dev-ui": "workspace:*",
    "@superimg/playwright": "workspace:*",
    "acorn": "^8.14.0",
    "commander": "^12.0.0",
    "superimg": "workspace:*",
    "hono": "^4.7.7",
    "ink": "^6.6.0",
    "react": "^19.0.0",
    "vite": "^7.3.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.8",
    "@types/ws": "^8.18.0"
  }
}
